<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] PreguntadoOrt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/img/Logo.webp">
</head>

<body>
    <input type="checkbox" id="hmenu" class="d-none position-absolute" >
    <label for="hmenu" id="lmenu" class="position-absolute start-0 top-0" style="width: 50px;"><img style="width: 50px;" src="https://cdn.icon-icons.com/icons2/1875/PNG/512/hamburgermenu_120234.png" alt="Menu" /></label>
    <aside>
        <a href='@Url.Action("HighScores")'>HighScores</a>
        <a href='@Url.Action("Index")'>Home</a>
    </aside>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="position-absolute bottom-0">
        &copy; @DateTime.Now.Year PreguntadoOrt
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
